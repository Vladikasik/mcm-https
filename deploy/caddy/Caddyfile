# Echo MCP Server - Caddy Configuration
# This file configures Caddy as a reverse proxy for the Echo MCP HTTPS Server

memory.aynshteyn.dev {
    # Handle SSE endpoint with specific configuration for streaming
    handle /sse* {
        reverse_proxy 127.0.0.1:8443 {
            transport http {
                tls_insecure_skip_verify
            }
            # Optimize for streaming
            flush_interval -1
        }
        header {
            Cache-Control "no-cache"
            Connection "keep-alive"
        }
    }
    
    # Handle MCP endpoint
    handle /mcp* {
        reverse_proxy 127.0.0.1:8443 {
            transport http {
                tls_insecure_skip_verify
            }
        }
    }
    
    # Handle root and other paths
    handle {
        reverse_proxy 127.0.0.1:8443 {
            transport http {
                tls_insecure_skip_verify
            }
        }
    }
    
    # Security headers
    header {
        X-Frame-Options DENY
        X-Content-Type-Options nosniff
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
    }
}

# Direct access on port 8443 (no proxy)
memory.aynshteyn.dev:8443 {
    # Handle SSE endpoint with specific configuration for streaming
    handle /sse* {
        reverse_proxy 127.0.0.1:8443 {
            transport http {
                tls_insecure_skip_verify
            }
            # Optimize for streaming
            flush_interval -1
        }
        header {
            Cache-Control "no-cache"
            Connection "keep-alive"
        }
    }
    
    # Handle MCP endpoint
    handle /mcp* {
        reverse_proxy 127.0.0.1:8443 {
            transport http {
                tls_insecure_skip_verify
            }
        }
    }
    
    # Handle root and other paths
    handle {
        reverse_proxy 127.0.0.1:8443 {
            transport http {
                tls_insecure_skip_verify
            }
        }
    }
} 